// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  email      String   @unique
  senha      String
  created_at DateTime @default(now())

  perfil Perfil[]
}

model Perfil {
  id         String   @id @unique @default(cuid())
  nome       String
  tipo       Int
  userId     String
  created_at DateTime @default(now())

  dono         User           @relation(fields: [userId], references: [id])
  perfil_admin perfil_admin[]
}

model perfil_admin {
  perfilId           String @id @default(cuid())
  grau_de_parentesco String
  pai                Perfil @relation(fields: [perfilId], references: [id])

  filho perfil_gamer[]
}

model perfil_gamer {
  id         String @id @default(cuid())
  perfilId   String @unique
  grau_serie String

  responsavel perfil_admin @relation(fields: [perfilId], references: [perfilId])

}
